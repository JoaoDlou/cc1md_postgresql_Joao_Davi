
CREATE TABLE cc1md_202308771_postgresql.produtos (
                produto_id NUMERIC(38) NOT NULL,
                nome VARCHAR(255) NOT NULL,
                preco_unitario NUMERIC(10,2),
                detalhes BYTEA,
                imagem BYTEA,
                imagem_mime_type VARCHAR(512),
                imagem_arquivo VARCHAR(512),
                imagem_charset VARCHAR(512),
                imagem_ultima_atualizacao DATE,
                CONSTRAINT produtos_pk PRIMARY KEY (produto_id)
);
COMMENT ON COLUMN cc1md_202308771_postgresql.produtos.produto_id IS 'identificaçao do produto que foi pedido';
COMMENT ON COLUMN cc1md_202308771_postgresql.produtos.nome IS 'nome do produto';
COMMENT ON COLUMN cc1md_202308771_postgresql.produtos.preco_unitario IS 'preco do produto';
COMMENT ON COLUMN cc1md_202308771_postgresql.produtos.detalhes IS 'detalhes do produto';
COMMENT ON COLUMN cc1md_202308771_postgresql.produtos.imagem IS 'imagem do produto';
COMMENT ON COLUMN cc1md_202308771_postgresql.produtos.imagem_arquivo IS 'arquivo da imagem';
COMMENT ON COLUMN cc1md_202308771_postgresql.produtos.imagem_charset IS 'charset da imagem';
COMMENT ON COLUMN cc1md_202308771_postgresql.produtos.imagem_ultima_atualizacao IS 'ultima atualizaçao da imagem do produto';


CREATE TABLE cc1md_202308771_postgresql.lojas (
                loja_id NUMERIC(38) NOT NULL,
                nome VARCHAR(255) NOT NULL,
                endereco_web VARCHAR(100),
                endereco_fisico VARCHAR(512),
                latitude NUMERIC,
                longitude NUMERIC,
                logo BYTEA,
                logo_mime_type VARCHAR(512),
                logo_arquivo VARCHAR(512),
                logo_charset VARCHAR(512),
                logo_ultima_atualizacao DATE,
                CONSTRAINT lojas_pk PRIMARY KEY (loja_id)
);
COMMENT ON COLUMN cc1md_202308771_postgresql.lojas.loja_id IS 'identificaçao da loja';
COMMENT ON COLUMN cc1md_202308771_postgresql.lojas.nome IS 'coluna para o nome da loja';
COMMENT ON COLUMN cc1md_202308771_postgresql.lojas.endereco_web IS 'coluna para o web endereço da loja';
COMMENT ON COLUMN cc1md_202308771_postgresql.lojas.endereco_fisico IS 'coluna para o endereço fisico da loja';
COMMENT ON COLUMN cc1md_202308771_postgresql.lojas.latitude IS 'coluna para informar a latitude da loja';
COMMENT ON COLUMN cc1md_202308771_postgresql.lojas.longitude IS 'coluna para informar a longitude da loja';
COMMENT ON COLUMN cc1md_202308771_postgresql.lojas.logo IS 'coluna para a logo da loja';
COMMENT ON COLUMN cc1md_202308771_postgresql.lojas.logo_arquivo IS 'coluna para o arquivo da logo da loja';
COMMENT ON COLUMN cc1md_202308771_postgresql.lojas.logo_ultima_atualizacao IS 'ultima atualizacoes da logo';


CREATE TABLE cc1md_202308771_postgresql.estoques (
                estoques_id NUMERIC(38) NOT NULL,
                loja_id NUMERIC(38) NOT NULL,
                produto_id NUMERIC(38) NOT NULL,
                quantidade NUMERIC(38) NOT NULL,
                CONSTRAINT estoques_pk PRIMARY KEY (estoques_id)
);
COMMENT ON COLUMN cc1md_202308771_postgresql.estoques.estoques_id IS 'identificaçao do estoque';
COMMENT ON COLUMN cc1md_202308771_postgresql.estoques.loja_id IS 'identificaçao da loja';
COMMENT ON COLUMN cc1md_202308771_postgresql.estoques.produto_id IS 'identificaçao do produto';
COMMENT ON COLUMN cc1md_202308771_postgresql.estoques.quantidade IS 'quantidade do produto em estoque';


CREATE TABLE cc1md_202308771_postgresql.clientes (
                Cliente_id NUMERIC(38) NOT NULL,
                email VARCHAR(255) NOT NULL,
                Nome VARCHAR(255) NOT NULL,
                Telefone1 VARCHAR(20),
                Telefone2 VARCHAR(20),
                Telefone3 VARCHAR(20),
                CONSTRAINT clientes_pk PRIMARY KEY (Cliente_id)
);
COMMENT ON COLUMN cc1md_202308771_postgresql.clientes.Cliente_id IS 'numero de indentificaçao do cliente';
COMMENT ON COLUMN cc1md_202308771_postgresql.clientes.email IS 'Coluna para o cliente colocar o seu email';
COMMENT ON COLUMN cc1md_202308771_postgresql.clientes.Nome IS 'coluna para o cliente informar o seu nome';
COMMENT ON COLUMN cc1md_202308771_postgresql.clientes.Telefone1 IS 'coluna para o cliente informar seu primeiro telefone (esta nao pode ser nula)';
COMMENT ON COLUMN cc1md_202308771_postgresql.clientes.Telefone2 IS 'coluna para o cliente informar seu segundo telefone caso houver(opcional)';
COMMENT ON COLUMN cc1md_202308771_postgresql.clientes.Telefone3 IS 'coluna para o cliente informar seu terceiro telefone caso houver(opcional)';


CREATE TABLE cc1md_202308771_postgresql.envios (
                envio_id NUMERIC(38) NOT NULL,
                loja_id NUMERIC(38) NOT NULL,
                cliente_id NUMERIC(38) NOT NULL,
                endereco_entrega VARCHAR(512) NOT NULL,
                status VARCHAR(15) NOT NULL,
                CONSTRAINT envios_pk PRIMARY KEY (envio_id)
);
COMMENT ON COLUMN cc1md_202308771_postgresql.envios.envio_id IS 'identificaçao do envio';
COMMENT ON COLUMN cc1md_202308771_postgresql.envios.loja_id IS 'identificaçao da loja';
COMMENT ON COLUMN cc1md_202308771_postgresql.envios.cliente_id IS 'identifiaçao do cliente';
COMMENT ON COLUMN cc1md_202308771_postgresql.envios.endereco_entrega IS 'endereço da entrega do pedido';
COMMENT ON COLUMN cc1md_202308771_postgresql.envios.status IS 'status da entrega';


CREATE TABLE cc1md_202308771_postgresql.pedidos (
                pedido_id NUMERIC(38) NOT NULL,
                data_hora TIMESTAMP NOT NULL,
                cliente_id NUMERIC(38) NOT NULL,
                status VARCHAR(15) NOT NULL,
                loja_id NUMERIC(38) NOT NULL,
                CONSTRAINT pedidos_pk PRIMARY KEY (pedido_id)
);
COMMENT ON COLUMN cc1md_202308771_postgresql.pedidos.pedido_id IS 'numero do pedido do cliente
';
COMMENT ON COLUMN cc1md_202308771_postgresql.pedidos.data_hora IS 'data e hora do pedido do cliente';
COMMENT ON COLUMN cc1md_202308771_postgresql.pedidos.cliente_id IS 'identificaçao do cliente que fez o pedido';
COMMENT ON COLUMN cc1md_202308771_postgresql.pedidos.status IS 'coluna para ver o status do pedido';
COMMENT ON COLUMN cc1md_202308771_postgresql.pedidos.loja_id IS 'identificaçao da loja';


CREATE TABLE cc1md_202308771_postgresql.pedidos_itens (
                pedido_id NUMERIC(38) NOT NULL,
                produto_id NUMERIC(38) NOT NULL,
                numero_da_linha NUMERIC(38) NOT NULL,
                preco_unitario NUMERIC(10,2) NOT NULL,
                quantidade  NUMERIC(38) NOT NULL,
                envio_id NUMERIC(38) NOT NULL,
                CONSTRAINT pedidos_itens_pk PRIMARY KEY (pedido_id, produto_id)
);
COMMENT ON COLUMN cc1md_202308771_postgresql.pedidos_itens.pedido_id IS 'identificaçao do pedido';
COMMENT ON COLUMN cc1md_202308771_postgresql.pedidos_itens.produto_id IS 'indentificaçao do produto que foi pedido';
COMMENT ON COLUMN cc1md_202308771_postgresql.pedidos_itens.numero_da_linha IS 'coluna para informar o numero da linha';
COMMENT ON COLUMN cc1md_202308771_postgresql.pedidos_itens.preco_unitario IS 'preço do produto';
COMMENT ON COLUMN cc1md_202308771_postgresql.pedidos_itens.quantidade  IS 'quantidade de produtos do pedido';
COMMENT ON COLUMN cc1md_202308771_postgresql.pedidos_itens.envio_id IS 'indentificaçao do envio do produto';


ALTER TABLE cc1md_202308771_postgresql.pedidos_itens ADD CONSTRAINT produtos_pedidos_itens_fk
FOREIGN KEY (produto_id)
REFERENCES cc1md_202308771_postgresql.produtos (produto_id)
ON DELETE NO ACTION
ON UPDATE NO ACTION
NOT DEFERRABLE;

